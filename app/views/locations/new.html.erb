<script type="text/javascript">
    tt_cancel_destination = "/";
    function set_ajaxURL_for_suggestions(url, filter_value) {
        $('touchscreenInput' + tstCurrentPage).setAttribute('ajaxURL', url + filter_value + "&search_string=");
        listSuggestions(tstCurrentPage);
    }

</script>

<%= form_for :location, method: 'POST', :url => locations_path do |f|-%>

    <%= text_field_tag "location", nil,
                       {:ajaxURL => "",
                        :allowFreeText => true,
                        :tt_onLoad => "set_ajaxURL_for_suggestions('/locations/search?search_string=', ''); ",
                        :helptext => "Enter work station location"}  %>

<% end %>

