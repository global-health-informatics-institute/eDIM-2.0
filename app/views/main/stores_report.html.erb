<style type="text/css">
  .odd{
    background-color: #B0BED9;
  }
  .even{

  }
  th,td{
    font-size: 1.5em !important;
    line-height: 1.7em;
  }
</style>

<div style="height: 6vh;border: 1px inset black; border-width: 0px 0px 3px 0px;">
  <h2 style="margin-left: 0.5vw;"><%= @report_type%></h2>
</div>

<div style="height: 78vh; overflow: auto;">
  <table id="storesReport" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
    <tr>
      <th>Item</th>
      <th style="width: 15%;">Amount Received</th>
      <th style="width: 15%;">Amount Issued</th>
      <th style="width: 15%;">Current Stock</th>
    </tr>
    </thead>

    <tbody>
    <% (@records.keys || []).each do |drug| %>
        <tr>
          <td><%= @records[drug]['name'] %></td>
          <td style="text-align: right;padding-right: 1vw;"><%= number_with_delimiter(@records[drug]['received']) %></td>
          <td style="text-align: right;padding-right: 1vw;"><%= number_with_delimiter(@records[drug]['issued']) %></td>
          <td style="text-align: right;padding-right: 1vw;"><%= number_with_delimiter(@records[drug]['current']) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="footer" >
  <button onmousedown="window.location = '/'" class="nav-bttn green" style="margin-right: 1vw;float: right;">
    <%= t('forms.buttons.finish') %>
  </button>
</div>
