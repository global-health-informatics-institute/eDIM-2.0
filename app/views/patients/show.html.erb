  <script type="text/javascript">
    var timerHand;

    function checkBarcode() {
      var barcodeTxt = document.getElementById("barcode");
      var rawValue = barcodeTxt.value.trim().toUpperCase().replace(/\-/, ""); // normalize

      if (rawValue.length >= 8) { // trigger as soon as we have enough characters
        barcodeTxt.value = rawValue;
        document.getElementById("bottle_id").innerHTML = rawValue;
        document.getElementById("btl_field").value = rawValue;

        // Fetch the bottle immediately
        getBottle(rawValue);

        // Reset input for next scan
        barcodeTxt.value = "";
      } else {
        // Wait a bit and check again
        setTimeout(checkBarcode, 300);
      }
    }
    // Start listening when page loads
    document.addEventListener("DOMContentLoaded", function() {
      document.getElementById("barcode").focus();
      checkBarcode();
    });

    function updateQuantity() {
      var dose = parseFloat(document.getElementById('dose').value) || 0;
      var duration = parseFloat(document.getElementById('qty').value) || 0;

      var frequencyCode = document.forms[0].elements["frequency"].value;
      var freq = 1;
      switch(frequencyCode) {
        case 'OD': freq = 1; break;
        case 'BD': freq = 2; break;
        case 'TDS': freq = 3; break;
        case 'QID': freq = 4; break;
        case 'QHR': freq = 24; break;
        case 'Q2HRS': freq = 12; break;
        case 'Q4HRS': freq = 6; break;
        case 'EOD': freq = 0.5; break;
        case 'QN': freq = 1; break;
        case 'QWK': freq = 1/7; break;
      }

      var qty = dose * freq * duration;
      qty = isNaN(qty) ? 0 : Math.ceil(qty);

      var currentQty = parseInt(document.getElementById('currQty').innerHTML, 10) || 0;

      if (qty > currentQty) {
        showDispensationWarning(`Cannot dispense more than ${currentQty} units.`);
        qty = currentQty; // clamp
      } else {
        hideDispensationWarning();
      }

      document.getElementById("qtyDisp").innerHTML = qty;
      document.getElementById("dispensed_quantity").value = qty;
    }

    function cancelDispense()
    {
      var barcodeTxt = document.getElementById("barcode");
      barcodeTxt.value = "";
      initializeListener();
      hideLayer('shadow', 'dispenseForm')
    }

    function initializeListener()
    {
      document.getElementById("barcode").focus();
      timerHand = setTimeout(function () {
        checkBarcode();
      }, 3000);

    }

    setTimeout(initializeListener(), 3000);

    function showDispenseDiv(option) {
      var tabs = ['routesDiv','doseDiv','directionsDiv','qtyDiv','doseTypeDiv'];
      var currentTab = tabs.indexOf(option);
      var button = document.getElementById('dispNext');
      var clearButton = document.getElementById('dispClear');

      $(".mobi-div").css("display", "none");
      $(".tab").css("border", "1px outset silver");
      document.getElementById(option).style.display = "";
      document.getElementById(option.replace("Div", "Tab")).style.border = "2px solid #de0404";

      // Show Clear button only on doseDiv or qtyDiv
      if (option === 'doseDiv' || option === 'qtyDiv') {
        clearButton.style.display = "inline-block";
      } else {
        clearButton.style.display = "none";
      }

      if (option == 'doseTypeDiv') {
        button.setAttribute("onmousedown", "validateDisp()");
        button.innerHTML = '<%= t('forms.buttons.finish') %>';
      } else {
        button.setAttribute("onmousedown", "showDispenseDiv('" + tabs[currentTab + 1] + "')");
        button.innerHTML = '<%= t('forms.buttons.next') %>';
      }
    }

    function setRoute(route) {
      document.getElementById("route_type").innerHTML = route;
      updateQuantity();
    }

    function setDirections(){
      var field = document.getElementById("directionsDisp");
      var frequency = document.forms[0].elements["frequency"].value
      field.innerHTML = createDirections(
          document.getElementById("route_type").innerHTML, 
          document.getElementById('dose').value, 
          frequency,
          "doseType"
      );
      updateQuantity();
    }

    function validateDisp() {
        checkRoute = document.getElementsByName("administration");
        checkDoseType = document.getElementsByName("doseType");
        checkdirections = document.getElementsByName("frequency");

        if (checkRadio(checkRoute)) {
            if (checkRadio(checkDoseType)) {
                if (parseFloat(document.getElementById('dose').value) > 0) {
                    if (checkRadio(checkdirections)) {
                        if (parseFloat(document.getElementById('qty').value) > 0) {
                            updateQuantity(); // <-- important
                            document.forms[0].submit();
                        } else {
                            showDispenseDiv('qtyDiv');
                        }
                    } else {
                        showDispenseDiv('directionsDiv');
                    }
                } else {
                    showDispenseDiv('doseDiv');
                }
            } else {
                showDispenseDiv('doseTypeDiv');
            }
        } else { 
            showDispenseDiv('routesDiv');
        }
    }

    function checkRadio(list)
    {
      for(i=0; i < list.length; i++){
        if(list[i].checked)
        {
          return true;
        }
      }
      return false;
    }
     
    function showDispensationWarning(message) {
      const warning = document.getElementById("dispensationWarning");
      warning.innerText = message;
      warning.style.display = "inline";
    }

    function hideDispensationWarning() {
      document.getElementById("dispensationWarning").style.display = "none";
    }

    function setQuantity(input) {
      var duration = parseFloat(document.getElementById(input).value) || 0;
      var frequencyCode = document.forms[0].elements["frequency"].value;

      var freq = 1;
      switch(frequencyCode) {
        case 'OD': freq = 1; break;
        case 'BD': freq = 2; break;
        case 'TDS': freq = 3; break;
        case 'QID': freq = 4; break;
        case 'QHR': freq = 24; break;
        case 'Q2HRS': freq = 12; break;
        case 'Q4HRS': freq = 6; break;
        case 'EOD': freq = 0.5; break;
        case 'QN': freq = 1; break;
        case 'QWK': freq = 1/7; break;
      }

      var qty = parseFloat(document.getElementById('dose').value) * freq * duration;
      qty = isNaN(qty) ? 0 : Math.ceil(qty);

      var currentQty = parseInt(document.getElementById('currQty').innerHTML, 10) || 0;

      if (qty > currentQty) {
        showDispensationWarning(`Cannot dispense more than ${currentQty} units.`);
        qty = currentQty;
      } else {
        hideDispensationWarning();
      }

      document.getElementById("qtyDisp").innerHTML = qty;
      document.getElementById("dispensed_quantity").value = qty;
    }

    // Function to clear current tab inputs
    function clearCurrentTab() {
      // Determine which tab is active
      var doseDiv = document.getElementById('doseDiv');
      var qtyDiv = document.getElementById('qtyDiv');

      if(doseDiv.style.display !== 'none') {
        document.getElementById('dose').value = '';
        updateQuantity(); // refresh calculation
      }

      if(qtyDiv.style.display !== 'none') {
        document.getElementById('qty').value = '';
        setQuantity('qty'); // refresh calculation
      }
    }


    function getBottle(bottleId) {
      var xmlhttp = (window.XMLHttpRequest) ? new XMLHttpRequest() : new ActiveXObject("Microsoft.XMLHTTP");

      xmlhttp.onreadystatechange = function() {
        if (xmlhttp.readyState == 4) {
          if (xmlhttp.status == 200) {
            var results = xmlhttp.responseText;

            if (!results || results === 'undefined' || results === 'null' || results === 'false' || results === '{}') {
              showFlashMessage(`Bottle ID ${bottleId} not found in inventory.`, true);
              initializeListener();
            } else {
              try {
                var result = JSON.parse(results);
                document.getElementById('item').innerHTML = result['name'];
                document.getElementById('currQty').innerHTML = result['currentQty'];

                // Only open modal when valid
                showDispenseForm();
                showDispenseDiv('routesDiv');
              } catch (e) {
                alert(`Bottle ID ${bottleId} returned invalid data.`);
                initializeListener();
              }
            }
          } else {
            alert(`Bottle ID ${bottleId} could not be fetched.`);
            initializeListener();
          }
        }
      };
      xmlhttp.open("GET", "/ajax_bottle/" + bottleId, true);
      xmlhttp.send();
    }
